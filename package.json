{
	"name": "votelink",
	"version": "0.1.0",
	"private": "true",
	"scripts": {
		"dev": "lerna run dev --scope \"@votelink/frontend\"",
		"build": "lerna run build",
		"start": "lerna run start --scope \"@votelink/frontend\"",
		"prepare": "is-ci || husky",
